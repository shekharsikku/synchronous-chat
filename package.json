{
  "name": "synchronous-chat",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --build --clean && tsc --build && tsc-alias",
    "start": "node dist/index.js",
    "dev:dev": "concurrently \"npm run dev\" \"npm run dev --prefix client\"",
    "build:build": "npm run build && npm run build --prefix client",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "bing-translate-api": "^4.2.0",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "cron": "^4.4.0",
    "dotenv": "^17.2.4",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jose": "^6.1.3",
    "mongoose": "^9.2.0",
    "morgan": "^1.10.1",
    "multer": "2.0.2",
    "request-ip": "^3.3.0",
    "socket.io": "^4.8.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/request-ip": "^0.0.41",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
